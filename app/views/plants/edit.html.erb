<h1>Editing cathegory</h1>
 <%= form_for :plant, url: plant_path(@plant), method: :patch do |f| %>
   
   <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :latin %><br>
    <%= f.text_field :latin %>
  </p>
  <p>
    <%= f.label :family %><br>
    <%= f.text_area :family %>
  </p>
   <p>
    <%= f.label :condition %><br>
    <%= f.text_area :condition %>
  </p>
  <p>
      <%= f.label :foto %><br>
      <%= f.file_field :foto %>
  </p>
   <p>
    <%= f.submit %>
  </p>
   <% end %>
 <%= link_to 'Back', plants_path %>
